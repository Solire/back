<h2>{{ title }}</h2>

{% if code %}
    <svg width="360" height="170">
        <!-- Symbol -->
        <symbol id="s-text">
            <text text-anchor="middle" x="50%" y="95%" dy=".0em">
                {{ code }}
            </text>
        </symbol>
        <!-- Duplicate symbols -->
        <use xlink:href="#s-text" class="animate-text"></use>
        <use xlink:href="#s-text" class="animate-text"></use>
        <use xlink:href="#s-text" class="animate-text"></use>
        <use xlink:href="#s-text" class="animate-text"></use>
        <use xlink:href="#s-text" class="animate-text"></use>
    </svg>
{% endif %}

<div class="sub">
    {% if message %}
        <p>
            {{ message }}
        </p>
    {% endif %}
  <p>
      <a class="btn" href="{{ btn.href }}">{{ btn.content }} </a>
  </p>
</div>