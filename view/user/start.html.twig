{% extends 'main.html.twig' %}
{% import "util/breadcrumbs.html.twig" as breadcrumbs %}

{% block content %}
    {{ parent() }}
    <h1>Mon profil</h1>

    {{ breadcrumbs.breadcrumbs(breadCrumbs) }}

    <form data-amd="modules/helper/ajaxform" method="post" action="back/user/changepassword.html" class="form-horizontal">
        <fieldset>
            <legend>Modifier le mot de passe</legend>
            <div class="line form-group">
                <label class="col-sm-3 control-label" for="old_password">Mot de passe actuel</label>

                <div class="col-sm-9">
                    <input type="password" value="" name="old_password" id="old_password"
                           class="form-controle form-oblig form-mix form-control">
                </div>
            </div>

            <div class="line form-group">
                <label class="col-sm-3 control-label" for="new_password">Nouveau mot de passe</label>

                <div class="col-sm-9">
                    <input type="password" value="" name="new_password" id="new_password"
                           class="form-controle form-oblig form-pass form-control ">
                </div>
            </div>

            <div class="line form-group">
                <label class="col-sm-3 control-label" for="new_password_c">Confirmation du nouveau mot de passe</label>

                <div class="col-sm-9">
                    <input type="password" value="" name="new_password_c" id="new_password_c"
                           class="form-controle form-oblig form-verification form-control">
                </div>
            </div>

            <div class="col-sm-9 col-sm-offset-3">
                <button class="btn btn-success btn-block formajaxsubmit" type="submit">
                    <i class="icon-edit"></i> Valider
                </button>
            </div>
        </fieldset>
    </form>
{% endblock %}