<form action="back/formulaire/save.html?name=user" method="POST" data-amd="modules/page/users">
  <div class="modalHeader">
    <a class="soModalDefaultClose" href="#"><i class="fa fa-close"></i></a>
    <h3>Edition / Ajout d'un utilisateur</h3>
  </div>

  <div class="modalBody">
    <input type="hidden" name="id" value="{{ data.id }}">

    <div class="form-group">
      <label for="user-civilite">Civilité</label>
      <select id="user-civilite" class="form-control" name="civilite" id="user-civilite" required>
        <option value="">Civilité</option>
        {% for civilite in civilites %}
          <option{% if civilite == data.civilite %} selected="selected"{% endif %}>{{ civilite }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-group">
      <label for="user-nom">Nom</label>
      <input type="text" class="form-control" name="nom" id="user-nom" value="{{ data.nom }}" placeholder="Nom" required>
    </div>

    <div class="form-group">
      <label for="user-prenom">Prénom</label>
      <input type="text" class="form-control" name="prenom" id="user-prenom" value="{{ data.prenom }}" placeholder="Prénom" required>
    </div>

    <div class="form-group">
      <label for="user-societe">Société</label>
      <input type="text" class="form-control" name="societe" id="user-societe" value="{{ data.societe }}" placeholder="Société">
    </div>

    <div class="form-group">
      <label for="user-niveau" class="control-label">Niveau</label>
      <select class="form-control" id="user-niveau" name="niveau" required>
        {% for niveau in niveaux %}
          <option{% if niveau == data.niveau %} selected="selected"{% endif %}>{{ niveau }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-group">
      <label for="user-email">Email</label>
      <input type="email" class="form-control" name="email" id="user-email" value="{{ data.email }}" placeholder="Email" required>
    </div>

    <div class="form-group">
      <label for="user-pass">Mot de passe</label>
      <input type="password" class="form-control" name="pass" id="user-pass" placeholder="Mot de passe"{% if data.id is empty %} required{% endif %}>
    </div>

    <div class="checkbox">
      <label>
        <input type="hidden" name="actif" value="0">
        <input type="checkbox" name="actif" id="user-actif" value="1"{% if data.actif %} checked="checked"{% endif %}>
        Actif
      </label>
    </div>

    <div class="alert alert-danger hidden" role="alert"></div>
  </div>

  <div class="modalFooter">
    <a href="#" class="btn btn-default soModalDefaultClose" tabindex="0">
      <i class="fa fa-remove"></i> Annuler
    </a>
    <button id="confirmButton" type="submit" class="btn btn-success" tabindex="0">
      <i class="fa fa-check"></i> Enregistrer
    </button>
  </div>
</form>
