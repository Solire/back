<form action="back/formulaire/save.html?name=user" method="POST" data-amd="modules/page/users">
  <div class="modalHeader">
    <a class="soModalDefaultClose" href="#"><i class="fa fa-close"></i></a>
    <h3>Edition / Ajout d'un utilisateur</h3>
  </div>

  <div class="modalBody">
    <div class="form-group">
      <label for="user-civilite">Civilité</label>
      <select id="user-civilite" class="form-control" name="civilite" id="user-civilite" required>
        <option value="">Civilité</option>
        <option>M.</option>
        <option>Mme</option>
      </select>
    </div>

    <div class="form-group">
      <label for="user-nom">Nom</label>
      <input type="text" class="form-control" name="nom" id="user-nom" placeholder="Nom" required>
    </div>

    <div class="form-group">
      <label for="user-prenom">Prénom</label>
      <input type="text" class="form-control" name="prenom" id="user-prenom" placeholder="Prénom" required>
    </div>

    <div class="form-group">
      <label for="user-societe">Société</label>
      <input type="text" class="form-control" name="societe" id="user-societe" placeholder="Société" required>
    </div>

    <div class="form-group">
      <label for="user-niveau" class="control-label">Niveau</label>
      <select class="form-control" id="user-niveau" name="niveau" required>
        <option>redacteur</option>
        <option>admin</option>
        <option>solire</option>
      </select>
    </div>

    <div class="form-group">
      <label for="user-email">Email</label>
      <input type="email" class="form-control" name="email" id="user-email" placeholder="Email" required>
    </div>

    <div class="form-group">
      <label for="user-pass">Mot de passe</label>
      <input type="password" class="form-control" name="pass" id="user-pass" placeholder="Mot de passe" required>
    </div>

    <div class="form-group">
      <label for="user-actif">Actif</label>
      <input type="checkbox" class="form-control" name="actif" id="user-actif" value="1">
    </div>
  </div>

  <div class="modalFooter">
    <a href="#" class="btn btn-default soModalDefaultClose" tabindex="0">
      <i class="fa fa-remove"></i> Annuler
    </a>
    <button id="confirmButton" type="submit" class="btn btn-danger" tabindex="0">
      <i class="fa fa-check"></i> Ajouter
    </button>
  </div>
</form>
