{% extends 'main.html.twig' %}
{% import "util/breadcrumbs.html.twig" as breadcrumbs %}

{% block title %}
    Liste des utilisateurs
{% endblock %}

{% block content %}
    <div data-amd="modules/helper/ajaxDialog">
        {{ breadcrumbs.breadcrumbs(breadCrumbs) }}

        <div class="datatable-actions">
            <a href="back/user/form.html" title="Ajout une ressource"
               class="btn btn-sm btn-success exec-onclick-ajaxdialog" type="button">
                <i class="fa fa-plus"></i> Ajouter un utilisateur
            </a>
        </div>

        <div class="datatable-wrapper hidden">
            <table data-amd="modules/helper/datatable" data-datatable-name="{{ name }}"
                   id="datatable" class="table table-condensed"></table>
        </div>
    </div>
{% endblock %}