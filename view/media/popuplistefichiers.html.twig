<div>
    <a href="#" class="btn btn-sm btn-success" id="pickfiles{{ idFilesList }}">
        <i class="fa fa-folder-open"></i> Ajouter un fichier
    </a>
</div>

<table id="tableau{{ idFilesList }}" class="display" style="width:100%;">
    <thead>
    <tr>
        <th>&nbsp;</th>
        <th>Taille</th>
        <th>Date / Heure</th>
        <th style="width: 50px;">&nbsp;</th>
    </tr>
    </thead>

    <tbody id="foldercontent{{ idFilesList }}">

    {% for files in file %}
        <tr id="fileid_{{ file.id }}">
            <td>
                <a target="_blank" class="exec-onclick-zoom" data-zoom-src="{{ file.path }}"
                   href="{{ file.path }}" title="{{ file.rewriting }}">
                    <img class="{{ file.class }}" src="{{ file.path_mini }}"
                         alt="{{ file.rewriting }}"/>
                </a>
            </td>
            <td>{{ file.poids }}</td>
            <td>{{ file.date_crea|date }}</td>
            <td class="center">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="{{ file.path }}" data-zoom-src="{{ file.path }}"
                           class="btn btn-info exec-onclick-zoom" title="Visualiser"><i class="fa fa-camera"></i></a>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
