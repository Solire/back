{% for files in file %}
    <tr class="{{ not file.utilise ? ' filenotused' }}" id="fileid_{{ file.id }}">
        <td>
            <a  class="previsu" href="{{ file.path }}" title="{{ file.rewriting }}">
                <img src="{{ file.path_mini }}" alt="{{ file.rewriting }}" />
            </a>
        </td>
        <td>{{ file.poids }}</td>
        <td>{{ file.width }}</td>
        <td>{{ file.height }}</td>
        <td>{{ file.date_crea|date }}</td>
        <td>{{ file.utilise ? 'Oui' : 'Non' }}</td>
        <td class="center">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a href="{{ file.path }}" class="btn btn-info previsu" title="Visualiser">
                        <i class="icon-camera"></i>
                    </a>
                </div>
            </div>
        </td>
    </tr>
{% endfor %}
